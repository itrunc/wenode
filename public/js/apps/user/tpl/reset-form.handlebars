<div class="row">
	<div class="col s12 m6 offset-m3 l4 offset-l4">
		<form class="card" method="post" action="/user">
			<div class="card-content">
				<span class="card-title black-text">发送重置密码邮件</span>
				<div class="input-field">
					<label>Email</label>
					<input name="email" type="email" class="validate">
				</div>
				<input name="type" type="hidden" value="reset">
				<input class="captcha-input" name="{{captcha.imageFieldName}}" type="hidden">
			</div>
			<div class="card-action">
				<p>请选择以下图片中的 <b>{{captcha.imageName}}</b></p>
				<div class="row">
					{{#each captcha.values}}
					<div class="col s2">
						<img class="captcha-img" title="" alt="" data-index="{{@index}}" src="/captcha/image/{{@index}}?r={{../now}}">
					</div>
					{{/each}}
				</div>
				<p>
					<button type="submit" class="waves-effect btn">重置密码</button>
					<a href="/user#signin" class="waves-effect btn-flat">登录</a>
				</p>
			</div>
		</form>
	</div>
</div>